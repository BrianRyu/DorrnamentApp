
<h1> Team <%= @team.name %> </h1>

<h2>Players:</h2>
<ul>
    <% @team.players.each do |player| %>
        <li> <%= link_to player.name, player_path(player.id) %> </li> <br>
    <% end %>
</ul>

<%= button_to "Edit Team", {:controller => :teams,
  :action => 'edit', :id => @team.id}, {:method => :get, class: "button"} if admin or on_team%>
