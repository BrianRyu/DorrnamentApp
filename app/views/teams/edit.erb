<h1> Team <%= @team.name %> </h1>

<h3> Edit Team </h3>


<form class="" action="/teams/<%= @team.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="">Name: </label>
  <input type="text" name="team[name]" value="<%= @team.name %>"><br><br>
  <label for="">Players: </label>
  <select name="player1">
    <% Player.all.each do |player| %>
    <option value="<%= player.id %>"><%= player.name %></option>
    <% end %>
  </select><br><br>
  <select name="player2">
    <% Player.all.each do |player| %>
    <option value="<%= player.id %>"><%= player.name %></option>
    <% end %>
  </select><br> <br>
  <input type="submit" name="" value="Edit Team" class="button">
</form>


<%= button_to "Delete Team", {:controller => :teams,
  :action => 'destroy', :id => @team.id}, {:method => :delete, data: {confirm: "This will delete the team. Are you sure?"}, class: 'button'} %>


<%= render "errors" %>
