<h1> Team <%= @team.name %> </h1>

<h3> Edit Team </h3>

<% @team.errors.full_messages.each do |error| %>
<li><font color='red'><%= error %></font></li>
<% end %>
</ul>

<%= form_for @team do |f| %>
Team Name : <%= f.text_field :name %><br>
<br>
  <%= f.fields_for :players do |player| %>
    <%= player.collection_select :id, (Player.all), :id, :name %>
  <% end %> 
  <br>
<%= f.submit :class => 'button'%>
<% end  %>

<%= button_to "Delete Team", {:controller => :teams,
  :action => 'destroy', :id => @team.id}, {:method => :delete, data: {confirm: "This will delete the team. Are you sure?"}, class: 'button'} %>

