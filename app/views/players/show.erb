<h1> <%= @player.name %> </h1>

<h3>Player Info</h3>
<p> Date Of Birth: <%= @player.birth_date %> </p>
<p> Gender: <%= @player.gender %> </p>
<p> Start Date of AVP: <%= @player.start_date %> </p>

<%= button_to "Delete Player", {:controller => :players, :action => 'destroy', :id => @player.id}, :method => :delete, data: {confirm: "This will delete the player. Are you sure?"} %>

<p> <%= "Email: #{@player.email}" if @player.id == session[:player_id]%> </p>

<%= button_to "Edit Information", {:controller => :players,
  :action => 'edit', :id => @player.id}, :method => :get if @player.id == session[:player_id] %>
